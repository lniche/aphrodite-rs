{
  "openapi": "3.1.0",
  "info": {
    "title": "Aphrodite API",
    "description": "API Description",
    "license": {
      "name": ""
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8000"
    }
  ],
  "paths": {
    "/v1/login": {
      "post": {
        "tags": [
          "认证模块"
        ],
        "description": "用户登录接口",
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginReq"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "获取用户信息成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResp"
                }
              }
            }
          }
        }
      }
    },
    "/v1/logout": {
      "post": {
        "tags": [
          "认证模块"
        ],
        "description": "用户退出登录接口",
        "operationId": "logout",
        "responses": {},
        "security": [
          {
            "bearer_auth": []
          }
        ]
      }
    },
    "/v1/send-code": {
      "post": {
        "tags": [
          "认证模块"
        ],
        "description": "发送校验短信",
        "operationId": "send_verify_code",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendVerifyCodeReq"
              }
            }
          },
          "required": true
        },
        "responses": {}
      }
    }
  },
  "components": {
    "schemas": {
      "LoginReq": {
        "type": "object",
        "required": [
          "phone",
          "code"
        ],
        "properties": {
          "code": {
            "type": "string",
            "example": "1234"
          },
          "phone": {
            "type": "string",
            "example": "13800138000"
          }
        }
      },
      "LoginResp": {
        "type": "object",
        "required": [
          "access_token"
        ],
        "properties": {
          "access_token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        }
      },
      "SendVerifyCodeReq": {
        "type": "object",
        "required": [
          "phone"
        ],
        "properties": {
          "phone": {
            "type": "string",
            "example": "13800138000"
          }
        }
      }
    },
    "securitySchemes": {
      "bearer_auth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}