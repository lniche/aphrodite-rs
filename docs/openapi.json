{
  "openapi": "3.1.0",
  "info": {
    "title": "Aphrodite API",
    "description": "API Description",
    "license": {
      "name": ""
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8000"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "认证模块"
        ],
        "summary": "用户登录接口",
        "description": "用户登录接口，用于用户通过用户名和密码进行身份验证，成功后返回认证 token。",
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReqLogin"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "获取用户信息成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RespLogin"
                }
              }
            }
          }
        }
      }
    },
    "/logout": {
      "post": {
        "tags": [
          "认证模块"
        ],
        "summary": "用户退出登录接口",
        "description": "用户退出登录接口，用于清除用户的认证 token，确保后续操作需要重新认证。",
        "operationId": "logout",
        "responses": {},
        "security": [
          {
            "bearer_auth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "ReqLogin": {
        "type": "object",
        "required": [
          "username",
          "password"
        ],
        "properties": {
          "password": {
            "type": "string",
            "description": "用户的密码",
            "example": "password123"
          },
          "username": {
            "type": "string",
            "description": "登录的用户名",
            "example": "user123"
          }
        }
      },
      "RespLogin": {
        "type": "object",
        "required": [
          "auth_token"
        ],
        "properties": {
          "auth_token": {
            "type": "string",
            "description": "用于验证身份的 JWT token",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        }
      }
    },
    "securitySchemes": {
      "bearer_auth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}