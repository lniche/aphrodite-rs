{
  "openapi": "3.1.0",
  "info": {
    "title": "Aphrodite API",
    "description": "API Description",
    "license": {
      "name": ""
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8000",
      "description": "Development Environment"
    },
    {
      "url": "http://test.aphrodite.com",
      "description": "Test Environment"
    }
  ],
  "paths": {
    "/v1/login": {
      "post": {
        "tags": [
          "Auth Module"
        ],
        "summary": "User Registration/Login",
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginReq"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResp"
                }
              }
            }
          }
        }
      }
    },
    "/v1/logout": {
      "post": {
        "tags": [
          "Auth Module"
        ],
        "summary": "User Logout",
        "operationId": "logout",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Resp"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      }
    },
    "/v1/send-code": {
      "post": {
        "tags": [
          "Auth Module"
        ],
        "summary": "Send Verification Code",
        "operationId": "send_verify_code",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendVerifyCodeReq"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Resp"
                }
              }
            }
          }
        }
      }
    },
    "/v1/user": {
      "get": {
        "tags": [
          "User Module"
        ],
        "summary": "User Info",
        "operationId": "info",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetUserResp"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      },
      "put": {
        "tags": [
          "User Module"
        ],
        "summary": "User Update",
        "operationId": "update",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUserReq"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Resp"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      },
      "delete": {
        "tags": [
          "User Module"
        ],
        "summary": "User Delete",
        "operationId": "delete",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Resp"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "GetUserResp": {
        "type": "object",
        "required": [
          "user_code",
          "user_no",
          "nickname",
          "email",
          "phone"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "john@example.com"
          },
          "nickname": {
            "type": "string",
            "example": "john"
          },
          "phone": {
            "type": "string",
            "example": "13800138000"
          },
          "user_code": {
            "type": "string",
            "example": "A8000"
          },
          "user_no": {
            "type": "integer",
            "format": "int64",
            "example": "100000",
            "minimum": 0
          }
        }
      },
      "LoginReq": {
        "type": "object",
        "required": [
          "phone",
          "code"
        ],
        "properties": {
          "code": {
            "type": "string",
            "example": "1234"
          },
          "phone": {
            "type": "string",
            "example": "13800138000"
          }
        }
      },
      "LoginResp": {
        "type": "object",
        "required": [
          "access_token"
        ],
        "properties": {
          "access_token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        }
      },
      "Resp": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32",
            "example": "0"
          },
          "message": {
            "type": "string",
            "example": "ok"
          }
        }
      },
      "SendVerifyCodeReq": {
        "type": "object",
        "required": [
          "phone"
        ],
        "properties": {
          "phone": {
            "type": "string",
            "example": "13800138000"
          }
        }
      },
      "UpdateUserReq": {
        "type": "object",
        "required": [
          "nickname",
          "email"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "john@example.com"
          },
          "nickname": {
            "type": "string",
            "example": "john"
          }
        }
      }
    },
    "securitySchemes": {
      "bearer_auth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}